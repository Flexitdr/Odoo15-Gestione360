<?xml version="1.0" encoding="utf-8"?>
<odoo>

<!--    <record id="menu_register_card_form" model="website.menu">-->

<!--    </record>-->

    <template id="register_credit_cards" name="Register Credit Cards">
        <t t-call="website.layout">
            <link rel="stylesheet" href="/esd_credit_cards/static/src/css/styles.css"/>
            <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11.0.19/dist/sweetalert2.all.min.js"/>
            <script type="text/javascript" src="/esd_credit_cards/static/src/js/index.js"/>
            <body style="background-image: url('/esd_credit_cards/static/src/img/fondo.jpg');"/>
            <div id="wrap">
                <div class="oe_structure pt-3 pb-3">
                    <center>
                        <div class="card p-3 shadow col-md-3" style="border-radius: 10px !important;">
                            <div class="card-header bg-white">
                                <img class="mx-auto d-block" src='/esd_credit_cards/static/src/img/logo.png' style="width: 150px;"/>
                            </div>
                            <div class="card-body p-3" style="background-color: #f5f5f5 !important;">
                                <p class="text-justify text-muted">
                                    Bienvenido a nuestro registro online de tarjeta de crédito del distribuidor
                                    exclusivo de COWAY en la República Dominicana. Por nuestra política de
                                    confidencialidad y seguridad, favor de ingresar usted mismo los datos de su
                                    tarjeta de crédito.
                                </p>
                                <form role="form" action="/create/customer/card" method="post">
                                    <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()"/>
                                    <div class="form-group">
                                        <div class="row">
                                            <div class="col-md-1">
                                                <i class="fa fa-tags fa-2x pull-left" style="color: rgba(82, 84, 87, 0.7) !important;"/>
                                            </div>
                                            <div class="col-md-11">
                                                <input type="text" name="order_number" t-att-value="order_number" id="order_number" class="form-control"
                                                       placeholder="Numero de Pedido" required="required"/>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <div class="row">
                                            <div class="col-md-1">
                                                <i class="fa fa-book fa-2x pull-left" style="color: rgba(82, 84, 87, 0.7) !important;"/>
                                            </div>
                                            <div class="col-md-11">
                                                <select id="type_of_document" name="type_of_document" class="form-control" required="required"
                                                        t-att-value="type_of_document">
                                                    <option value="" disabled="True" selected="True">Type of Document</option>
                                                    <option value="cedula">Cedula</option>
                                                    <option value="rnc">RNC</option>
                                                    <option value="passport">Passport</option>
                                                </select>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <div class="row">
                                            <div class="col-md-1">
                                                <i class="fa fa-clipboard fa-2x pull-left" style="color: rgba(82, 84, 87, 0.7) !important;"/>
                                            </div>
                                            <div class="col-md-11">
                                                <input type="text" name="document" t-att-value="document" id="document" class="form-control"
                                                       placeholder="Numero de Documento sin guiones" maxlength="11" minlength="11" required="required"/>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <div class="row">
                                            <div class="col-md-1">
                                                <i class="fa fa-user fa-2x pull-left" style="color: rgba(82, 84, 87, 0.7) !important;"/>
                                            </div>
                                            <div class="col-md-11">
                                                <input type="text" name="titular" t-att-value="titular" id="titular" class="form-control"
                                                       placeholder="Nombre del titular de la tarjeta" required="required"/>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <div class="row">
                                            <div class="col-md-1">
                                                <i class="fa fa-list-alt fa-2x pull-left" style="color: rgba(82, 84, 87, 0.7) !important;"/>
                                            </div>
                                            <div class="col-md-11">
                                                <select id="type_of_card" name="type_of_card" class="form-control" required="required"
                                                        t-att-value="type_of_card">
                                                    <option value="" disabled="True" selected="True">Type of Card</option>
                                                    <option value="mastercard">Mastercard</option>
                                                    <option value="visa">VISA</option>
                                                    <option value="american express">American Express</option>
                                                    <option value="other">Other</option>
                                                </select>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <div class="row">
                                            <div class="col-md-1">
                                                <i class="fa fa-credit-card fa-2x pull-left" style="color: rgba(82, 84, 87, 0.7) !important;"/>
                                            </div>
                                            <div class="col-md-11">
                                                <input type="text" name="number_card" t-att-value="number_card" id="number_card"
                                                       class="form-control" placeholder="Número de tarjeta" required="required" maxlength="16" minlength="15"/>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <div class="row">
                                            <div class="col-md-1">
                                                <i class="fa fa-table fa-2x pull-left" style="color: rgba(82, 84, 87, 0.7) !important;"/>
                                            </div>
                                            <div class="col-md-11">
                                                <input type="text" name="expiration_date" t-att-value="expiration_date" id="expiration_date"
                                                       class="form-control" placeholder="Fecha de vencimiento MM/AA" required="required"
                                                       maxlength="5" minlength="5"/>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <div class="row">
                                            <div class="col-md-12">
                                                <input type="checkbox" id="customCheck1" required="required"/>
                                                <label for="customCheck1">
                                                    I accept the <a target="_blank" href="https://esdcorporation.com/DatosTDC/Contrato">Terms and conditions</a>
                                                </label>
                                            </div>

                                        </div>
                                    </div>
                                    <div class="clearfix oe_login_buttons">
                                        <center>
                                            <button type="submit" class="btn m-3 col-md-4" style="background-color: #428bca; color: white;">Enviar</button>
                                        </center>
                                    </div>
                                </form>
                            </div>
                            <div class="card-footer bg-white">
                                <img class="mx-auto d-block" src='/esd_credit_cards/static/src/img/coway.png' style="width: 150px;"/>
                                <p style="font-size: 15px;">© 2022 - ESD Corporation todos los derechos reservados</p>
                            </div>
                        </div>
                    </center>
                </div>
            </div>
        </t>
    </template>

    <record id="register_thanks" model="website.page">
        <field name="name">Thanks</field>
        <field name="type">qweb</field>
        <field name="url">/register-thank-you</field>
        <field name="website_published">True</field>
        <field name="key">esd_credit_cards.register_thanks</field>
        <field name="arch" type="xml">
            <t name="Thanks" t-name="esd_credit_cards.register_thanks">
                <t t-call="website.layout">
                    <div id="wrap">
                        <center>
                            <div class="container bg-white shadow m-3">
                                <h1 class="display-4">Thanks!</h1>
                                <hr/>
                                <div class="row">
                                    <div class="col-md-12">
                                        <div class="alert alert-success" role="status">
                                            The card was registered successfully.
                                        </div>
                                        <p>
                                            Great day.
                                        </p>
                                    </div>
                                </div>
                            </div>
                        </center>
                    </div>
                </t>
            </t>
        </field>
    </record>
</odoo>

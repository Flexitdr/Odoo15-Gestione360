<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="credit_cards_view_tree" model="ir.ui.view">
        <field name="name">credit.cards</field>
        <field name="model">credit.cards</field>
        <field name="arch" type="xml">
            <tree string="Credit Cards" export_xlsx="false" editable="bottom">
                <field name="order_number" readonly="1"/>
                <field name="type_of_document" readonly="1"/>
                <field name="document" readonly="1"/>
                <field name="titular" readonly="1"/>
                <field name="type_of_card" readonly="1"/>
                <field name="number_card" readonly="1"/>
                <field name="expiration_date"/>
                <field name="storage_card" class="text-white bg-white border-0 p-3" widget="CopyClipboardChar"
                       string="Copy Card"/>
                <field name="is_visible" invisible="1"/>
            </tree>
        </field>
    </record>

    <record id="credit_card_search_view" model="ir.ui.view">
        <field name="name">credit.cards.view</field>
        <field name="model">credit.cards</field>
        <field name="arch" type="xml">
            <search>
                <field name="order_number"/>
                <field name="type_of_document"/>
                <field name="document"/>
                <field name="titular"/>
                <field name="type_of_card"/>
                <field name="number_card"/>
                <field name="expiration_date"/>
            </search>
        </field>
    </record>

    <record id="action_credit_cards" model="ir.actions.act_window">
        <field name="name">Credit Cards</field>
        <field name="res_model">credit.cards</field>
        <field name="view_mode">tree</field>
        <field name="search_view_id" ref="credit_card_search_view"/>
    </record>

    <menuitem
            id="menu_credit_cards"
            name="Information Credit Cards"
            parent="account.menu_finance_receivables"
            action="action_credit_cards"
            sequence="115"/>
</odoo>

<odoo>
    <template id="esd_purchaseorder_report" inherit_id="purchase.report_purchaseorder_document">

        <xpath expr="//div[@id='informations']" position="before">
            <p>Subject: <span t-field="o.subject"/></p>
        </xpath>

        <xpath expr="//table/thead/tr/th[@name='th_taxes']" position="replace">
        </xpath>

        <xpath expr="//table/thead/tr/th[@name='th_date_req']" position="replace">
        </xpath>

        <xpath expr="//table/thead/tr/th[@name='th_price_unit']" position="replace">
            <th name="th_price_unit" class="text-center"><strong>Unit Price</strong></th>
        </xpath>

        <xpath expr="//table/thead/tr/th[@name='th_amount']" position="replace">
            <th name="th_amount" class="text-center"><strong>Amount</strong></th>
        </xpath>

        <xpath expr="//table/tbody/t/tr/t/td[@name='td_taxes']" position="replace">
        </xpath>

        <xpath expr="//table/tbody/t/tr/t/td/span[@t-field='line.date_planned']" position="replace">
        </xpath>

        <xpath expr="//div[@id='informations']/div[@t-if='o.user_id']" position="replace">
            <div class="col-3 bm-2">
                <strong>Currency:</strong>
                <p t-field="o.currency_id" class="m-0"/>
            </div>
            <div class="col-3 bm-2">
                <strong>Destination:</strong>
                <p t-field="o.picking_type_id" class="m-0"/>
            </div>
        </xpath>

        <xpath expr="//table/tbody/t/tr/t/td[3][@class='text-right']" position="replace">
            <td class="text-left">
                <span t-field="line.product_qty" style="margin-left:-45px;"/>
            </td>
        </xpath>

        <xpath expr="//table/tbody/t/tr/t/td[4][@class='text-right']" position="replace">
            <td class="text-left">
                <span t-field="line.price_unit" style="margin-left:-125px;"/>
            </td>
        </xpath>

        <xpath expr="//table/tbody/t/tr/t/td[5][@class='text-right']" position="replace">
            <td class="text-left">
                <span t-field="line.price_subtotal"
                      t-options='{"widget": "monetary", "display_currency": o.currency_id}'
                      style="margin-left:-125px;"/>
            </td>
        </xpath>

        <xpath expr="//p[@t-field='o.notes']" position="after">
            <div class="bottom-page" style="top:900px; page-break-inside: avoid;">
                <div class="row" style="margin:auto;">
                    <div class="col-3">
                        <img t-att-src="'data:image/jpg;base64,%s' % to_text(o.stamp)" alt="Stamp"
                             style="width:200px; margin-top:-38px; position:absolute;"/>
                    </div>
                    <div class="col-9" style="margin-top:100px;">
                        <hr style="height: 2px;background-color: #143e69; width:30%;"/>
                        <span><p t-field="o.user_id" class="m-0"/></span>
                    </div>
                </div>
            </div>
        </xpath>

    </template>
</odoo>
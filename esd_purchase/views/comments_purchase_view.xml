<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="comments_purchase_tree_view" model="ir.ui.view">
            <field name="name">purchase.order.comments</field>
            <field name="model">purchase.order.comments</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="comments" string="Comments"/>
                    <field name="company" string="Company"/>
                </tree>
            </field>
        </record>

        <record id="comments_purchase_form_view" model="ir.ui.view">
            <field name="name">Purchase Order Comments</field>
            <field name="model">purchase.order.comments</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="comments" string="Comments"/>
                            <field name="company" string="Company"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="action_comments_purchase" model="ir.actions.act_window">
            <field name="name">Comments Purchase</field>
            <field name="res_model">purchase.order.comments</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem
                id="menu_purchase_orders"
                name="Config purchase orders"
                parent="purchase.menu_purchase_config"
                sequence="2"/>

        <menuitem
            id="menu_comments_purchase"
            name="Comments purchase orders"
            parent="menu_purchase_orders"
            action="action_comments_purchase"
            sequence="3"/>

    </data>
</odoo>

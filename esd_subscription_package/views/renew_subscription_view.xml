<odoo>
    <data>
        <record id="subscription_package_subscription_renew_esd_id" model="ir.ui.view">
            <field name="name">subscription.package.subscription.renew.esd</field>
            <field name="model">renew.subscription</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="partner"/>
                    <field  name="subscriptions"/>
                    <field  name="seller"/>
                    <field  name="subscription_information"/>
                    <field  name="notes"/>
                    <field  name="subscription_state"/>
                </tree>
            </field>
        </record>

        <record id="subscription_package_subscription_renew_esd_form" model="ir.ui.view">
            <field name="name">Subscription Information</field>
            <field name="model">renew.subscription</field>
            <field name="arch" type="xml">
                <form >
                    <header>
                        <field name="subscription_state" widget="statusbar"/>
                    </header>
                    <sheet>
                        <h1>
                            <field name="name" placeholder="aa" attrs="{'readonly': 1}"/>
                        </h1>
                        <group>
                            <group>
                                <field name="partner"/>
                                <field name="subscription_information" widget="upload_file"/>
                            </group>
                            <group>
                                <field name="seller"/>
                            </group>
                    </group>
                        <group>
                            <field name="subscriptions" />
                        </group>
                        <group>
                            <field name="notes" placeholder="Write a Comment..."/>
                        </group>
                        <button name="action_send_email" type="object" string="Send Renew Mail" class="btn-primary oe_read_only"/>

                    </sheet>
                      <div class="oe_chatter">
                          <field name="message_follower_ids" widget="mail_followers"/>
                          <field name="message_ids" widget="mail_thread"/>
                          <field name="activity_ids" widget="mail_activity"/>
                    </div>
                </form>
            </field>
        </record>

        <record id="subscription_package_subscription_renew_esd" model="ir.actions.act_window">
            <field name="name">Subscriptions Information</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">renew.subscription</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem id="subscriptions_menu_subscriptions_to_renew"
                  name="Subscriptions Information"
                  parent="subscription_package.subscription_menu_subscriptions"
                  action="subscription_package_subscription_renew_esd"
                sequence="10"/>

    </data>
</odoo>
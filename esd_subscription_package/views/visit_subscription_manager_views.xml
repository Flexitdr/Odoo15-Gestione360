<odoo>
    <data>
        <record id="visit_subscription_manager" model="ir.ui.view">
            <field name="name">visit.subscription.manager.esd</field>
            <field name="model">visit.subscription</field>
            <field name="arch" type="xml">
                <tree editable="bottom">
                    <field name="partner_id"/>
                    <field  name="name"/>
                    <field  name="equipment_id"/>
                    <field  name="reference_code"/>
                    <field  name="price"/>
                    <field  name="date"/>
                    <field  name="sale_id"/>
                    <field  name="last_maintenance"/>
                    <field  name="invoice_state"/>
                    <field  name="product_id"/>
                    <field  name="state" decoration-primary="state=='generated'" decoration-warning="state=='assigned'" decoration-success="state=='ready'" widget="badge"/>
                    <button name="button_create_invoice" type="object" string="Create Invoice" class="oe_highlight"
                            attrs="{'invisible' :[('invoice_state','=','generated')]}"/>
                </tree>
            </field>
        </record>

        <record id="visit_subscription_manager_menu_action" model="ir.actions.act_window">
            <field name="name">Visit Manager</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">visit.subscription</field>
            <field name="view_mode">tree</field>
        </record>

        <menuitem id="visit_subscription_manager_menu"
                  name="Visit Manager"
                  parent="subscription_package.subscription_menu_root"
                  action="visit_subscription_manager_menu_action"
                sequence="17"/>

    </data>
</odoo>
<?xml version="1.0" ?>
<odoo>
    <record id="esd_subs_view_partner_form" model="ir.ui.view">
        <field name="name">esd_subs_view_partner_form</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form" />
        <field name="arch" type="xml">
        <button name="action_view_opportunity" position="replace">
                <button
                    context="{'search_default_open': True, 'default_partner_id': active_id}"
                    name="action_view_subs_view"
                    type="object"
                    class="oe_stat_button"
                    icon="fa-refresh"
                >
                    <field invisible="True" name="subs_count_active_count" />
                    <field invisible="True" name="subs_ticket_count" />
                    <field name="subs_count_string" widget="statinfo" />
                </button>
        </button>
        </field>
    </record>
</odoo>

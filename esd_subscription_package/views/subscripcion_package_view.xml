<odoo>
    <data>
        <record id="subscription_package_subscription_package_form_esd" model="ir.ui.view">
            <field name="name">subscription.package.subscription.package.form.esd</field>
            <field name="model">subscription.package</field>
            <field name="inherit_id" ref="subscription_package.subscription_package_form"/>
            <field name="arch" type="xml">
                <header position="inside">
                    <button name="button_subscription_information" type="object"  class="btn-primary oe_read_only" string="Renew form" attrs="{'invisible' :[('current_stage','!=','expiration')]}"/>
                    <button name="button_payment" type="object"  class="btn-primary oe_read_only" string="Payment" attrs="{'invisible':[('current_stage','!=','approved')]}" />

                </header>
                <div name="button_box" position="inside">
                    <button name="button_invoice_recurrence_count" type="object" class="oe_stat_button"
                                icon="fa-book" >
                            <div class="o_field_widget o_stat_info">
                                <span class="o_stat_value">
                                    <field name="invoice_recurrence_count"/>
                                </span>
                                <span class="o_stat_text">
                                    Invoices
                                </span>
                            </div>
                        </button>
                </div>
                <page name="other_info" position="after">
                    <page string="Historic Invoices" name="recurring_invoices">
                        <field name="recurring_invoices"/>
                    </page>
                </page>
                <field name="next_invoice_date" position="after">
                    <field name="subscription_duration"/>
                </field>

                <field name="plan_id" position="replace">
                    <field name="plan_id" attrs="{'readonly':[('stage_category','in', ('progress', 'approved', 'expiration'))]}"/>
                </field>
                <field name="analytic_account_id" position="replace">
                    <field name="analytic_account_id" invisible="1"/>
                </field>
                <field name="tag_ids" position="replace">
                    <field name="tag_ids" invisible="1"/>
                </field>
                <field name="next_invoice_date" position="after">
                    <field name="payment_format"/>
                </field>
                <field name="company_id" position="after">
                    <field name="responsible_collect" attrs="{'invisible':[('stage_category','in', ('progress', 'draft'))]}"/>
                    <field name="sale_id"/>
                    <field name="edit_price"/>
                </field>
            </field>
        </record>
    </data>
</odoo>
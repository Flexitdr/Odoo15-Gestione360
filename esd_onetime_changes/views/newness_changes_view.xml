<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="newness_changes_view_tree" model="ir.ui.view">
        <field name="name">newness.changes</field>
        <field name="model">newness.changes</field>
        <field name="arch" type="xml">
            <tree string="Types Newness">
                <field name="name"/>
                <field name="code"/>
                <field name="category"/>
            </tree>
        </field>
    </record>

    <record id="newness_changes_view_form" model="ir.ui.view">
        <field name="name">Novedades</field>
        <field name="model">newness.changes</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name" string="Name"/>
                        <field name="code" string="Code"/>
                        <field name="category" string="Category"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_newness_changes" model="ir.actions.act_window">
        <field name="name">Novedades</field>
        <field name="res_model">newness.changes</field>
        <field name="view_mode">tree,form</field>
        <field name="search_view_id" ref="newness_changes_view_tree"/>
    </record>

    <menuitem
            name="Novedades"
            id="menu_onetime_changes"
            parent="hr_payroll_community.menu_hr_payroll_community_root"
            sequence="10"/>
    <menuitem
            id="menu_type_newness"
            name="Types Newness"
            parent="menu_onetime_changes"
            action="action_newness_changes"
            sequence="10"/>
</odoo>

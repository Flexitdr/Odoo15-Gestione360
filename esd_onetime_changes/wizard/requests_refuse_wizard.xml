<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <record id="subscription_close_wizard_view" model="ir.ui.view">
        <field name="name">requests.refuse.wizard.view</field>
        <field name="model">requests.refuse.wizard</field>
        <field name="arch" type="xml">
            <form string="Requests Refuse Wizard">
                <group>
                    <field name="refuse_reason"/>
                    <field name="closed_by"/>
                    <field name="close_date"/>
                </group>
                <footer>
                    <button name="button_submit" string="Submit" type="object" class="btn-primary"
                            confirm="Are you sure you want to do this?"/>
                    <button string="Cancel" class="btn-secondary"
                            special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

</odoo>
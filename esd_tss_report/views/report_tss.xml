<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="newness_changes_view_tree" model="ir.ui.view">
        <field name="name">report.tss.form</field>
        <field name="model">report.tss.form</field>
        <field name="arch" type="xml">
            <tree string="TSS Report">
                <field name="name"/>
                <field name="payment_period"/>
            </tree>
        </field>
    </record>

    <record id="newness_changes_view_form" model="ir.ui.view">
        <field name="name">Tss Report</field>
        <field name="model">report.tss.form</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="name" string="Name"/>
                        </group>
                        <group>
                            <field name="payment_period" string="Payment Period" options="{'no_create': True, 'no_create_edit':True}"/>
                            <field name="date_from"/>
                            <field name="date_to"/>
                        </group>
                        <group attrs="{'invisible':[('is_visible','=', False)]}">
                            <field name="file_name" invisible="1"/>
                            <field name="is_visible" invisible="1"/>
                            <field name="file_to_report" string="File to report" filename="file_name" readonly="1"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_tss_report" model="ir.actions.act_window">
        <field name="name">TSS Report</field>
        <field name="res_model">report.tss.form</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem
            id="menu_tss_report"
            name="TSS Report"
            parent="hr_payslip_monthly_report.menu_hr_payslip_reports"
            action="action_tss_report"
            sequence="11"/>
</odoo>

<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="appears_tss_view_form_inherit" model="ir.ui.view">
            <field name="name">hr.salary.rule</field>
            <field name="model">hr.salary.rule</field>
            <field name="inherit_id" ref="hr_payroll_community.hr_salary_rule_form"/>
            <field name="arch" type="xml">
                <field name="appears_on_payslip" position="before">
                    <field name="appears_on_tss" string="Appears on tss"/>
<!--                    <separator string="Configuration Report TSS"/>-->
<!--                    <field name="show_in_header" string="Show in header"-->
<!--                           attrs="{'invisible': [('appears_on_tss', '!=', True)]}"/>-->
                </field>
                <xpath expr="//page[@name='rules']" position="after">
                    <page string="Configuration Report TSS" attrs="{'invisible': [('appears_on_tss', '!=', True)]}">
                        <separator colspan="4" string="Conditions"/>
                        <label for="show_in_header"/>
                        <field name="show_in_header"/><newline/>

                        <separator colspan="4" string="Salary rule where sum"
                                   attrs="{'invisible': [('show_in_header', '!=', False)]}"/>
                        <field name="where_sum_id" attrs="{'invisible': [('show_in_header', '!=', False)],
                        'required':[('show_in_header', '!=', True)]}"/>
                    </page>
                </xpath>
            </field>
        </record>
    </data>
</odoo>

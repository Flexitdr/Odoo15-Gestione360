<odoo>
    <data>
        <record id="subscription_package_subscription_package_form_esd" model="ir.ui.view">
            <field name="name">subscription.package.subscription.package.form.esd</field>
            <field name="model">subscription.package</field>
            <field name="inherit_id" ref="subscription_package.subscription_package_form"/>
            <field name="arch" type="xml">

                <field name="subscription_duration" position="after">
                    <field name="equipment_id"/>
                </field>

            </field>
        </record>

        <record id="subscription_package_subscription_package_kanban_esd" model="ir.ui.view">
            <field name="name">subscription.package.subscription.package.form.kanban</field>
            <field name="model">subscription.package</field>
            <field name="inherit_id" ref="subscription_package.subscription_package_kanban"/>
            <field name="arch" type="xml">

                <field name="reference_code" position="after">
                    <field name="equipment_id"/>
                </field>

                <xpath expr="//kanban/templates/t/div/div/div/field[@name='reference_code']" position="after">
                    <br/>
                    <field name="equipment_id" /><br/>
                    <field name="plan_id" /><br/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
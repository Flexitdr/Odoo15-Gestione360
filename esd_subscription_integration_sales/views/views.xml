<odoo>
  <data>

    <!-- Inherit Form View to Modify it -->
    <record id="sale_view_order_form_inherit_integration_subscription" model="ir.ui.view">
        <field name="name">sale_view_order_form_inherit_integration_subscription</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">

            <xpath expr="//field[@name='order_line']/tree/field[@name='price_subtotal']" position="after">
                <!-- Add your fields or attributes here -->
              <field name="subscription_plane_id"/>
                <field name="payment_format"/>
                <field name="subs_lines" invisible='1'/>
            </xpath>

        </field>
    </record>

  </data>
</odoo>
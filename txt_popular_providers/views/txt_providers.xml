<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="txt_providers_action_inherit" model="ir.ui.view">
        <field name="name">account.payment</field>
        <field name="model">account.payment</field>
        <field name="inherit_id" ref="account.view_account_supplier_payment_tree"/>
        <field name="arch" type="xml">
            <tree>
                <header>
                    <button name="button_txt_providers_wizard" string="Generate Txt for paid" type="object"
                            class="btn-success"/>
                </header>
            </tree>
        </field>
    </record>

    <record id="account_txt_search_view" model="ir.ui.view">
        <field name="name">account.payment.view</field>
        <field name="model">account.payment</field>
        <field name="inherit_id" ref="account.view_account_payment_search"/>
        <field name="arch" type="xml">
            <xpath expr="//search/field[@name='name']" position="before">
                <filter name="group_state" string="Txt state" context="{'group_by':'state_pay_txt'}"/>
                <filter name="not_paid_state" string="Not paid txt" domain="[('state_pay_txt','=','pending')]"/>
                <filter name="paid_state" string="Paid txt" domain="[('state_pay_txt','=','paid')]"/>
            </xpath>
        </field>
    </record>

    <record id="seq_providers" model="ir.sequence">
        <field name="name">Header seq field txt</field>
        <field name="code">header.sequence</field>
        <field name="prefix"/>
        <field name="padding">7</field>
        <field name="company_id" eval="False"/>
    </record>

    <record id="seq_transactions" model="ir.sequence">
        <field name="name">Transaction sequence txt</field>
        <field name="code">transaction.sequence</field>
        <field name="prefix"/>
        <field name="padding">7</field>
        <field name="number_next">1</field>
        <field name="number_increment">1</field>
        <field name="company_id" eval="False"/>
    </record>

    <record id="reference_number_seq" model="ir.sequence">
        <field name="name">Reference number sequence txt</field>
        <field name="code">reference.number.sequence</field>
        <field name="prefix">ESD</field>
        <field name="padding">8</field>
        <field name="company_id" eval="False"/>
    </record>

    <record id="field_name_seq" model="ir.sequence">
        <field name="name">Field name sequence txt</field>
        <field name="code">field.name.sequence</field>
        <field name="prefix"/>
        <field name="padding">7</field>
        <field name="company_id" eval="False"/>
    </record>

</odoo>
    <record id="seq_payroll" model="ir.sequence">
        <field name="name">Header seq payroll txt</field>
        <field name="code">header.sequence.payroll</field>
        <field name="prefix"/>
        <field name="padding">7</field>
        <field name="company_id" eval="False"/>
    </record>

    <record id="seq_transactions_payroll" model="ir.sequence">
        <field name="name">Transaction sequence payroll txt</field>
        <field name="code">transaction.sequence.payroll</field>

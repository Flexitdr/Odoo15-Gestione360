<odoo>
    <record id="payment_bank_line_view_tree" model="ir.ui.view">
        <field name="name">payment_bank_line_view_tree</field>
        <field name="model">payment.bank.line</field>
        <field name="arch" type="xml">
            <tree string="Payment Bank Line" edit="false" create="false" delete="false">
                <field name="name"/>
                <field name="product_id"/>
                <field name="bank_id"/>
                <field name="approbation_code"/>
                <field name="bank_amount" widget="monetary"/>
                <field name="customer_amount" widget="monetary"/>
                <field name="sale_id"/>
                <field name="state"/>
                <field name="sale_line_id" invisible="1"/>
                <field name="currency_id" invisible="1"/>
            </tree>
        </field>
    </record>

    <record id="payment_bank_line_action" model="ir.actions.act_window">
        <field name="name">Payment Bank</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">payment.bank.line</field>
        <field name="view_mode">tree</field>
    </record>

    <record id="payment_bank_line_server_action" model="ir.actions.server">
        <field name="name">Create Invoice</field>
        <field name="model_id" ref="esd_sale_management.model_payment_bank_line"/>
        <field name="binding_model_id" ref="esd_sale_management.model_payment_bank_line"/>
        <field name="binding_view_types">list</field>
        <field name="state">code</field>
        <field name="code">
            model.create_invoice(records)
        </field>
    </record>

</odoo>
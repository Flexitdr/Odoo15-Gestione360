<odoo>
    <record id="esd_financing_plan_view_form" model="ir.ui.view">
        <field name="name">esd_financing_plan_view_form</field>
        <field name="model">esd.financing.plan</field>
        <field name="arch" type="xml">
            <form string="Financing Plan">
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                        </group>
                        <group>
                            <field name="qty_month"/>
                        </group>
                    </group>
                    <notebook>
                        <page name="payment_plan" string="Payment Plan">
                            <field name="payment_plan_ids">
                                <tree editable="1">
                                    <field name="name"/>
                                    <field name="code"/>
                                    <field name="qty_payment"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

      <record id="esd_financing_plan_view_tree" model="ir.ui.view">
          <field name="name">esd_financing_plan_view_tree</field>
          <field name="model">esd.financing.plan</field>
          <field name="arch" type="xml">
              <tree string="Financing Plan">
                  <field name="name"/>
                  <field name="qty_month"/>
              </tree>
          </field>
      </record>

      <record id="esd_financing_plan_view_action" model="ir.actions.act_window">
          <field name="name">Financing Plan</field>
          <field name="type">ir.actions.act_window</field>
          <field name="res_model">esd.financing.plan</field>
          <field name="view_mode">tree,form</field>
      </record>

</odoo>
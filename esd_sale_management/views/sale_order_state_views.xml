<odoo>
    <data>
        <record id="state_sale_order_form" model="ir.ui.view">
            <field name="name">state_sale_order_form</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">
                <header position="inside">
                    <button name="button_validate_order" type="object"  class="btn-primary oe_read_only" string="Validate"
                            attrs="{'invisible': [('state', 'in', ['validate', 'sale', 'cancel'])]}"/>
                </header>

                <button name="action_confirm" position="replace">
                    <button name="action_confirm" id="action_confirm" data-hotkey="v"
                        string="Confirm" class="btn-primary" type="object"
                        attrs="{'invisible': [('state', 'not in', ['sent', 'validate'])]}"/>
                </button>

                <button name="action_cancel" position="replace">

                    <button name="action_cancel" type="object" string="Cancel"
                            attrs="{'invisible': ['|', ('state', 'not in', ['draft', 'sent','sale','validate']), ('id', '=', False)]}"
                            data-hotkey="z"/>

                </button>
            </field>
        </record>

        <record id="sale_state_filter" model="ir.ui.view">
                    <field name="name">State Sale Validate</field>
                    <field name="model">sale.order</field>
                    <field name="arch" type="xml">
                        <search>
                            <filter name="by_state" string="State" domain="[('state', '=', 'validate')]"/>
                        </search>
                    </field>
                </record>

                <record id="sale_order_filter_action" model="ir.actions.act_window">
                    <field name="name">State Sale Validate</field>
                    <field name="type">ir.actions.act_window</field>
                    <field name="res_model">sale.order</field>
                    <field name="search_view_id" ref="sale_state_filter"/>
                    <field name="context">

                    </field>
                    <field name="view_mode">tree</field>
                </record>
    </data>
</odoo>
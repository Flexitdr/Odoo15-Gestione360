<odoo>
    <record id="esd_payment_plan_fee_view_form" model="ir.ui.view">
        <field name="name">esd_payment_plan_fee_view_form</field>
        <field name="model">esd.payment.plan.fee</field>
        <field name="arch" type="xml">
            <form string="Payment Plan Fee" edit="false" create="false">
                <header>
                    <field name="state" widget="statusbar" statusbar_visible="created,running,closed"/>
                </header>
                <sheet>
                    <h1><field name="name"/></h1>
                    <group name="top">
                        <group name="left">
                            <field name="partner_id"/>
                            <field name="payment_plan_id"/>
                            <field name="date"/>
                            <field name="currency_id" invisible="1"/>
                            <field name="amount_financed" widget="monetary"/>
                        </group>
                        <group name="right">
                            <field name="sale_id"/>
                            <field name="sale_line_id"/>
                            <field name="product_id"/>
                            <field name="invoice_id"/>
                        </group>
                    </group>
                    <notebook>
                        <page name="fee_plan" string="Fee  Plan">
                            <field name="fee_ids" readonly="1">
                                <tree>
                                    <field name="payment_date"/>
                                    <field name="currency_id" invisible="1"/>
                                    <field name="amount_to_pay" widget="monetary"/>
                                    <field name="state"/>
                                    <field name="qty_fee"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="esd_payment_plan_fee_view_tree" model="ir.ui.view">
        <field name="name">esd_payment_plan_fee_view_tree</field>
        <field name="model">esd.payment.plan.fee</field>
        <field name="arch" type="xml">
            <tree string="Payment Plan Fee">
                <field name="name"/>
                <field name="partner_id"/>
                <field name="payment_plan_id"/>
                <field name="date"/>
                <field name="currency_id" invisible="1"/>
                <field name="amount_financed" widget="monetary"/>
            </tree>
        </field>
    </record>

    <record id="esd_payment_plan_fee_action" model="ir.actions.act_window">
        <field name="name">Fee Plan</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">esd.payment.plan.fee</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>
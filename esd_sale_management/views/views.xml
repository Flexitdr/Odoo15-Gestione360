<odoo>
  <data>

    <!-- Inherit Form View to Modify it -->
    <record id="sale_view_order_form_inherit_esd_sale_management" model="ir.ui.view">
        <field name="name">sale_view_order_form_inherit_esd_sale_management</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">

            <xpath expr="//field[@name='payment_term_id']" position="after">
                <field name="offer_id"/>
                <field name="is_financing_sale"/>
                <field name="is_pay_by_bank" invisible="1"/>
                <field name="bank_id" invisible="1"/>
                <field name="will_be_pay_by_bank" invisible="1"/>
                <field name="approbation_code" attrs="{'invisible': [('will_be_pay_by_bank', '!=', True)]}"/>
                <field name="payment_filename" invisible="1"/>
                <field name="payment_file" filename="payment_filename" widget="binary"/>
                <field name="purchase_filename" invisible="1"/>
                <field name="purchase_file" filename="purchase_filename" widget="binary"/>
            </xpath>

            <xpath expr="//field[@name='order_line']/tree/field[@name='product_id']" position="before">
                <!-- Add your fields or attributes here -->
                <field name="group_id"/>
            </xpath>

            <xpath expr="//field[@name='order_line']/tree/field[@name='name']" position="after">
                <!-- Add your fields or attributes here -->
                <field name="is_financing_sale" invisible="1"/>
                <field name="financing_id" optional="hide" attrs="{'required': ['&amp;', ('is_financing_sale', '=', True), ('product_type_related', '!=', 'service')], 'invisible': [('is_financing_sale', '=', False)]}"/>
                <field name="payment_plan_id" optional="hide" attrs="{'required': ['&amp;', ('is_financing_sale', '=', True), ('product_type_related', '!=', 'service')], 'invisible': [('is_financing_sale', '=', False)]}"/>
                <field name="is_pay_by_bank" invisible="1"/>
                <field name="product_type_related" invisible="1"/>
                <field name="bank_amount"  optional="hide"  widget="monetary" attrs="{'required': [('is_pay_by_bank', '=', True)], 'invisible': [('is_pay_by_bank', '=', False)]}"/>
                <field name="customer_amount"  optional="hide"  widget="monetary" attrs="{'invisible': [('is_pay_by_bank', '=', False)]}"/>
                <field name="is_financing_sale" invisible="1"/>
                <field name="is_pay_by_bank" invisible="1"/>
            </xpath>

            <xpath expr="//field[@name='order_line']/tree/field[@name='name']" position="replace">
                <!-- Add your fields or attributes here -->
                <field name="name" invisible="1"/>
            </xpath>

            <xpath expr="//page[@name='order_lines']" position="after">
                <page name="document_required" string="Document Required">
                    <field name="document_required_ids">
                        <tree editable="bottom">
                            <field name="name"/>
                            <field name="filename" invisible="1"/>
                            <field name="file_document"  widget="binary" filename="filename"/>
                        </tree>
                    </field>
                </page>
            </xpath>

        </field>
    </record>

  </data>
</odoo>
<odoo>
    <record id="esd_offer_sale_view_form" model="ir.ui.view">
          <field name="name">esd_offer_sale_view_form</field>
          <field name="model">esd.offer.sale</field>
          <field name="arch" type="xml">
              <form string="Offer Sale">
                  <sheet>
                      <h1><field name="name"/></h1>
                      <group>
                          <group>
                              <field name="date_start"/>
                          </group>
                          <group>
                              <field name="date_end"/>
                          </group>
                          <group>
                              <field name="payment_by_bank"/>
                              <field name="is_financing_sale"/>
                          </group>
                          <group>
                              <field name="bank_id" attrs="{'invisible': [('payment_by_bank', '=', False)], 'required': [('payment_by_bank', '=', True)]}"/>
                          </group>
                      </group>
                      <notebook>
                          <page name="line" string="Lines">
                              <field name="line_ids">
                                  <tree editable="bottom">
                                      <field name="product_id"/>
                                      <field name="discount"/>
                                  </tree>
                              </field>
                          </page>
                      </notebook>
                  </sheet>
              </form>
          </field>
      </record>

      <record id="esd_offer_sale_view_tree" model="ir.ui.view">
          <field name="name">esd_offer_sale_view_tree</field>
          <field name="model">esd.offer.sale</field>
          <field name="arch" type="xml">
              <tree string="Offers">
                  <field name="name"/>
                  <field name="date_start"/>
                  <field name="date_end"/>
              </tree>
          </field>
      </record>

      <record id="esd_offer_sale_view_action" model="ir.actions.act_window">
          <field name="name">Offers</field>
          <field name="type">ir.actions.act_window</field>
          <field name="res_model">esd.offer.sale</field>
          <field name="view_mode">tree,form</field>
      </record>
</odoo>
<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="account_view_form_inherit" model="ir.ui.view">
            <field name="name">account.move</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form"/>
            <field name="arch" type="xml">
                <field name="to_check" position="after">
                    <field name="responsible_collect" string="Responsible for collection"/>
                    <field name="payment_filename" invisible="1"/>
                    <field name="payment_file" filename="payment_filename" widget="binary" readonly="1"/>
                    <field name="purchase_filename" invisible="1"/>
                    <field name="purchase_file" filename="purchase_filename" widget="binary" readonly="1"/>
                </field>
            </field>
        </record>
    </data>
</odoo>

<odoo>
    <data noupdate="1">

        <record id="esd_commissions_journal" forcecreate="True" model="account.journal">
            <field name="name">Comisiones Vendedores Externos</field>
            <field name="type">purchase</field>
            <field name="commission_pay">True</field>
            <field name="code">CVE</field>
        </record>

        <record id="esd_product_commission" forcecreate="True" model="product.template">
            <field name="name">Producto Pago de Comisiones</field>
            <field name="detailed_type">service</field>
            <field name="list_price">0.00</field>
            <field name="is_commission">True</field>
        </record>

        <record id="esd_rule_commission" forcecreate="True" model="hr.salary.rule">
            <field name="name">Pago de Comisiones</field>
            <field name="category_id">2</field>
            <field name="code">CO</field>
            <field name="amount_select">code</field>
            <field name="amount_python_compute">commission = payslip.env['commission.line'].get_commisions(employee.user_id, payslip.date_from, payslip.date_to)
                result = commission
            </field>
        </record>

    </data>
</odoo>

<odoo>
    <data>
        <record id="azul_books_id" model="ir.ui.view">
            <field name="name">Azul Books</field>
            <field name="model">azul.books</field>
            <field name="arch" type="xml">
                <tree string="Azul Payment Books" edit="false" create="false" delete="false">
                        <field name='mid'  />
                        <field name='subscription_id'  />
                        <field name='group'  />
                        <field name='name'  />
                        <field name='ident_type'  />
                        <field name='ident_num'  />
                        <field name='contract'  />
                        <field name='card_number'  />
                        <field name='currency'  />
                        <field name='amount' sum="Amount"  />
                        <field name='tax'  />
                        <field name='transaction_date'  />
                        <field name='transaction_type'  />
                        <field name='approved'  />
                        <field name='authorization_number'  />
                        <field name='rrn'  />
                        <field name='response_code'  />
                        <field name='response_message'  />
                    </tree>

            </field>
        </record>
    </data>


     <record id="azul_books_search" model="ir.ui.view">
        <field name="name">Azul Payment Books Search</field>
        <field name="model">azul.books</field>
        <field name="arch" type="xml">
            <search>
                <filter name="by_transaction_date" string="Date" context="{'group_by': 'transaction_date'}"/>

            </search>
        </field>
    </record>

     <record id="azul_payment_books" model="ir.actions.act_window">
        <field name="name">Azul Payment Books</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">azul.books</field>
        <field name="search_view_id" ref="azul_books_search"/>
        <field name="context">
            {'search_default_by_transaction_date':1}
        </field>
        <field name="view_mode">tree</field>
    </record>


    <menuitem id="azul_books_id_item"
              name="Azul Payment Books"
              parent="account.menu_finance_entries_accounting_ledgers"
              action="azul_payment_books"
              sequence="3"/>
</odoo>
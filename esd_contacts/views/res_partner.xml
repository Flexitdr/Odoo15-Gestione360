<odoo>

    <!-- Inherit Form View to Modify it -->
    <record id="res_partner_form_view_inherit_esd_contacts" model="ir.ui.view">
        <field name="name">res_partner_form_view_inherit_esd_contacts</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">

            <xpath expr="//field[@name='category_id']" position="after">
                <field name="assigned_collector"/>
            </xpath>

            <xpath expr="//group[@name='sale']/field[@name='user_id']" position="attributes">
                <attribute name="readonly">1</attribute>
            </xpath>

            <xpath expr="//field[@name='country_id']" position="before">
                <!-- Add your fields or attributes here -->
                <field name="city_id" class="o_address_state" placeholder="City" options="{'no_open': True, 'no_quick_create': True}" />
                <field name="municipality_id" class="o_address_state" placeholder="Municipality" options="{'no_open': True, 'no_quick_create': True}" />
                <field name="zone_id" class="o_address_state" placeholder="Zone" options="{'no_open': True, 'no_quick_create': True}" />
            </xpath>

            <xpath expr="//kanban//templates//field[@name='name']" position="after">
                <br/>
                <field name="type"/>
            </xpath>

            <xpath expr="//field[@name='child_ids']//form//field[@name='name']" position="after">
                <field name="relationship"/>
            </xpath>

            <xpath expr="//field[@name='child_ids']//form//field[@name='state_id']" position="after">
                <field name="city_id" class="o_address_state" placeholder="City" options="{'no_open': True, 'no_quick_create': True}" />
                <field name="municipality_id" class="o_address_state" placeholder="Municipality" options="{'no_open': True, 'no_quick_create': True}" />
                <field name="zone_id" class="o_address_state" placeholder="Zone" options="{'no_open': True, 'no_quick_create': True}" />
            </xpath>

        </field>
    </record>

</odoo>